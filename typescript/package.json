{
  "name": "website",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "repository": {
    "url": "https://github.com/krisnye/voxel"
  },
  "scripts": {
    "build": "vite build && tsc --preserveWatchOutput",
    "preview": "vite preview",
    "test": "gtest lib",
    "watch": "run-p watch:*",
    "watch:vite": "vite --port 8080 --no-clearScreen",
    "watch:tsc": "tsc -w --preserveWatchOutput",
    "watch:test": "nodemon -w lib -w src -w external -e js,ts,is,ion --delay 200ms -x npm run test"
  },
  "dependencies": {
    "preact": "^10.13.1",
    "@babylonjs/core": "6.4.1",
    "@babylonjs/materials": "6.4.1"
  },
  "devDependencies": {
    "@glas/test": "^1.0.5",
    "@preact/preset-vite": "^2.5.0",
    "@types/node": "^20.1.2",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.0.2",
    "vite": "^4.3.2"
  }
}